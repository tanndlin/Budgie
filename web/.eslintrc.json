{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint-config-prettier"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "eqeqeq": ["error", "smart"],
        "eol-last": ["error"],
        "curly": "warn",
        "no-var": 2,
        "prefer-const": "error",
        "semi": "error",
        "space-before-blocks": "error",
        "spaced-comment": "warn",
        "prettier/prettier": ["error", { "singleQuote": true }],
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-unused-vars": ["error", { "caughtErrors": "none" }],
        "comma-dangle": ["error", "always-multiline"]
    },
    "parser": "esprima",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "root": true
}
